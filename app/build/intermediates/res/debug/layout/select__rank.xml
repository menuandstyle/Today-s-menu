<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jungip.Select_Rank"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/select_rank_main" />

    <Button
        android:id="@+id/bt_select_rank_question"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/select_rank_question" />

    <Button
        android:id="@+id/bt_select_rank_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_select_rank_second"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:background="@drawable/select_rank_first" />

    <Button
        android:id="@+id/bt_select_rank_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_select_rank_question"
        android:layout_alignLeft="@+id/bt_select_rank_second"
        android:layout_marginBottom="75dp"
        android:background="@drawable/select_rank_third" />

    <Button
        android:id="@+id/bt_select_rank_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_select_rank_first"
        android:layout_centerVertical="true"
        android:background="@drawable/select_rank_second" />

</RelativeLayout><!-- From: file:/C:/Users/Soon-won/AndroidStudioProjects4/TodayMenu/app/src/main/res/layout/select__rank.xml -->